{
  "name": "statusboard",
  "version": "0.1.0",
  "description": "Status board for American Airlines IT - displays a summary of system status in a hierarchy from the product portfolio through individual infrastructure components at a glance, with optional incident messaging.",
  "old-scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "files": [ "dist/", "build/" ],
  "scripts": {
    "api:dev": "npm-run-all -l api:build -p api:build:watch api:start:watch",
    "api:start": "node dist/index.js",
    "api:start:watch": "nodemon -w dist -e js dist/index.js",
    "api:build": "tsc -p api/ --pretty",
    "api:build:watch": "npm run api:build -- -w",
    "api:test": "jest",
    "api:test:coverage": "npm run api:test -- --coverage",
    "ui:start": "cross-env REACT_APP_IS_LOCAL=true react-scripts start",
    "ui:build": "react-scripts build",
    "ui:test": "react-scripts test --watchAll=false",
    "ui:eject": "react-scripts eject",
    "build": "npm-run-all -l api:build ui:build",
    "lint": "eslint \"api/**/*.ts\" \"src/**/*.{tsx,ts}\" --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "checkstyle": "prettier -l \"api/**/*.ts\" \"src/**/*.{tsx,ts,css}\"",
    "checkstyle:fix": "npm run checkstyle -- --write",
    "test": "npm-run-all api:test:coverage ui:test",
    "start": "node dist/index.js"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "core-js": "^3.6.5",
    "express": "^4.16.4",
    "express-session": "^1.17.1",
    "node-fetch": "^2.6.0",
    "oidc-client": "^1.10.1",
    "openid-client": "^3.15.0",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.12.0",
    "react-router": "^5.1.2",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.1.2",
    "typeorm": "^0.2.19",
    "typescript": "^3.7.5",
    "uuid": "^7.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/cors": "^2.8.6",
    "@types/cron": "^1.7.2",
    "@types/deep-equal": "^1.0.1",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^24.9.1",
    "@types/js-base64": "^2.3.1",
    "@types/js-yaml": "^3.12.3",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^12.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.3",
    "@types/passport-http-bearer": "^1.0.35",
    "@types/passport-oauth2": "^1.4.9",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router": "^5.1.4",
    "@types/react-router-bootstrap": "^0.24.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/sqlite3": "^3.1.5",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chokidar": "^3.4.2",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.21.0",
    "fetch-mock-jest": "^1.2.7",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react-scripts": "^3.4.3",
    "sqlite3": "^4.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.4.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
